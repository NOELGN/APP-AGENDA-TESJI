<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AltaAlumno">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ALTA ALUMNO" />

    <EditText
        android:id="@+id/etNoControlAltaAlum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NO. CONTROL"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etNombreAltaAlum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="NOMBRE"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etApeUnoAltaAlum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="APELLIDO 1"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etApeDosAltaAlum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="APELLIDO 2"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etEmailAltaAlum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="EMAIL"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etTelAltaAlum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="TELÃ‰FONO"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spCarreras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="guardarAlumno"
        android:text="GUARDAR" />

    <Button
        android:id="@+id/button14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cancelar"
        android:text="CANCELAR" />

    <Button
        android:id="@+id/button15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="regresar"
        android:text="REGRESAR" />
</LinearLayout>